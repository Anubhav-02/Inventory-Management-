{
  "info": {
    "name": "ProductInventoryApi",
    "_postman_id": "9f4f0d7a-0d1b-4c3f-9a2a-a1c9ac3b7f2f",
    "description": "Product Inventory REST API collection",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Create Product",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Pencil\",\n  \"description\": \"HB wooden pencil\",\n  \"price\": 10.5,\n  \"stockQuantity\": 100,\n  \"category\": \"Stationery\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/products",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "products"
          ]
        }
      }
    },
    {
      "name": "Get All Products (filters + sort + pagination)",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/products?category=Stationery&sort=price_desc&page=1&pageSize=5",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "products"
          ],
          "query": [
            {
              "key": "category",
              "value": "Stationery"
            },
            {
              "key": "sort",
              "value": "price_desc"
            },
            {
              "key": "page",
              "value": "1"
            },
            {
              "key": "pageSize",
              "value": "5"
            }
          ]
        }
      }
    },
    {
      "name": "Search + Low Stock",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/products?search=pencil&lowStock=true",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "products"
          ],
          "query": [
            {
              "key": "search",
              "value": "pencil"
            },
            {
              "key": "lowStock",
              "value": "true"
            }
          ]
        }
      }
    },
    {
      "name": "Get Product by ID",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/products/1",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "products",
            "1"
          ]
        }
      }
    },
    {
      "name": "Update Product (partial)",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"price\": 12.0,\n  \"stockQuantity\": 80\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/products/1",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "products",
            "1"
          ]
        }
      }
    },
    {
      "name": "Soft Delete Product",
      "request": {
        "method": "DELETE",
        "url": {
          "raw": "{{baseUrl}}/api/products/1",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "products",
            "1"
          ]
        }
      }
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:5000"
    }
  ]
}